<script type="text/javascript">
    //$(document).ready(function () {
    //    Iniciar.Inicializador();
    //});

    function OnExibirPopUpPesquisaProdutos(param) {
        $('#modalItensEstoqueZerado').modal('show');
    }

    function OnExibirPopUpVendasHoje(param) {
        $('#modalVendasHoje').modal('show');
    }

    function OnExibirPopUpDevolucoesHoje(param) {
        $('#modalDevolucoesHoje').modal('show');
    }

    
</script>