                <div class="boxFabricante col-md-2" id="DivFabricante">
                    @{
                        @Html.RadioButton("IdFabricante", lIdFabricante, false, new { @class = "rbtFabricante" }) @Html.Raw(" " + lNomeFabricante + " ")<br />
                     }
