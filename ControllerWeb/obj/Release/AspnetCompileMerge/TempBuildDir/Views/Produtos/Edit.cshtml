            lIdModelo = (string)item.Value;
        }
    }
                    }
                    <label>Modelo</label>
                    <input type="text" id="txtPesquisaModelo" class="form-control" onkeyup="AoDigitarModelo()" style="width:150px" value="@lNomeModelo" />
                </div>
                <div class="col-md-2 boxModelo" id="DivModelo">

